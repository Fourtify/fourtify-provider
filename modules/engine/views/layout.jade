        script(type="text/javascript",src="/bower/ocLazyLoad/dist/ocLazyLoad.min.js")
        script(type="text/javascript",src="/bower/angular-bootstrap/ui-bootstrap.min.js")
        script(type="text/javascript",src="/bower/ng-file-upload/ng-file-upload.min.js")
        script(type="text/javascript",src="/bower/angular-loading-bar/src/loading-bar.js")
        script(type="text/javascript",src="/bower/angular-ui-router/release/angular-ui-router.min.js")
