#title-breadcrumb-option-demo.page-title-breadcrumb
    .page-header.pull-left
        .page-title Settings
    //-ol.breadcrumb.page-breadcrumb.pull-left
        li
            i.fa.fa-files-o
            a(href, ui-sref="customers-all") &nbspCustomers&nbsp
            i.fa.fa-angle-right
        li.active &nbspCustomers Settings
    .clearfix
    //
      END TITLE & BREADCRUMB PAGE
      
//
  BEGIN CONTENT
.page-content
    .row
        .col-xs-12
            //- ALERTS
            .alert.alert-dismissable.alert-danger.register-fail(ng-show="err.show")
                button.close(data-dismiss='alert', type='button') &times;
                p.
                    {{err.msg}}
            .alert.alert-dismissable.alert-success(ng-show="success.show")
                button.close(data-dismiss='alert', type='button') &times;
                p.
                    {{success.msg}}
                
            //- CONTENT
            .panel.panel-default
                .panel-heading
                    h3.panel-title {{ profile.name.first }}'s Settings
                .panel-body
                    .row
                        .col-xs-3
                            h5 Name
                        .col-xs-6
                            h6 {{ profile.name.first }} {{ profile.name.last }}
                        //.col-xs-2
                            button.btn.btn-primary(ng-click="changeProfile()") Change
                    hr
                    
                    //- Change Password
                    .row
                        .col-xs-3
                            h5 Password
                        .col-xs-6
                            h6 *************************
                        .col-xs-3
                            button.btn.btn-block.btn-primary(ng-click="collapseChangePassword = false; changePassword.new = '';") Change
                    //- Change Password Input
                    .row(uib-collapse="collapseChangePassword")
                        .col-xs-offset-3.col-xs-9
                            form
                                .form-group(ng-class="{'has-error': changePassword.hasError, 'has-success': !changePassword.hasError}")
                                    label(for="change-password-new") New Password
                                    input#change-password-new.form-control(type="password", ng-model="changePassword.new", ng-change="changePassword.validate();")
                                .form-group(ng-class="{'has-error': changePassword.hasError, 'has-success': !changePassword.hasError}")
                                    label(for="change-password-verify") Verify New Password
                                    input#change-password-verify.form-control(type="password", ng-model="changePassword.verify", ng-change="changePassword.validate();")
                            button.btn.btn-primary(ng-click="changePassword.change();") Submit
    
//
  END CONTENT
