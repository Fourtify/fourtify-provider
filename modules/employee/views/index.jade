// Page Content
#page-wrapper
    .container-fluid
        .row
            .col-lg-12
                h1.page-header.employeeHeader Employees
                form.employeeSearch
                    input(type='text', name='search', placeholder='Search Employees')
                    br
            .col-lg-12
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#') Directory
                        li
                            a(href='#') Import CSV
                                    //Modal Controller
            .col-lg-12(ng-controller='EmployeeAllCtrl')
                button#newAppt.btn.btn-info(style="margin-top:10px",type='button', data-toggle='modal', data-target='#myModal') ADD NEW EMPLOYEE
                // Modal
                #myModal.modal.fade(role='dialog')
                    .modal-dialog(ng-class="{'modal-sm': size == 'sm', 'modal-lg': size == 'lg'}")
                        // Modal content
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal') Ã—
                                h4.modal-title ADD NEW EMPLOYEE
                            .modal-body
                                .form-group.employeeName
                                    label Full Name
                                    input#name.form-control(type='text', ng-model='current.name', value='{{current.name}}')
                                .form-group.employeeTitle
                                    label Title
                                    select.form-control
                                        option Mr.
                                        option Ms.
                                        option Mrs.
                                        option Dr.
                                .form-group
                                    label Email
                                    input.form-control
                                .form-group
                                    label Phone Number
                                    input.form-control
                            .modal-footer
                                button.btn.btn-default(type='button', data-dismiss='modal') Cancel
                                button.btn.btn-primary(ng-click='addNew(current)', type='submit', data-dismiss='modal') Add
                .col-lg-3.employeeList
                    table.table.table-striped
                        thead
                            tr
                                th Name
                        tbody
                            tr(ng-repeat='user in users')
                                td
                                    h4
                                        a(href='#') {{user.name}}

                    //ul
                    //    li(ng-repeat='user in users')
