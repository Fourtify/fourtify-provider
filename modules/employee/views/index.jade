                    //            a(href='#') {{user.name}}
                .col-lg-9.employeeAdd
                    .col-lg-8.employeeForm
                        h1 Will Ferrell
                        .form-group
                            .form-group.employeeName
                                label Full Name
                                input#name.form-control(type='text', value='Will Ferrell')
                            .form-group.employeeTitle
                                label Title
                                select.form-control
                                    option Mr.
                                    option Ms.
                                    option Mrs.
                                    option Dr.
                        .form-group
                            label Email
                            input.form-control(type='text', value='theRealWillFerrell@WillFerrell.com')
                        .form-group
                            label Phone Number
                            input.form-control(type='text', value='555-555-5555')
                        .employeeButtons
                            button.btn.btn-primary.btn-lg(type='button', style="background-color:#d9534f") Cancel
                            button.btn.btn-primary.btn-lg(type='button', style="background-color:#5bc0de") Edit
