.container-fluid
    .row
        .col-lg-12
            h1.page-header EMPLOYEES
                .row
                    button#newAppt.btn.btn-info(type='button', ng-click="create()") CREATE
        .row
            .col-lg-12
                .alert.alert-dismissable.alert-danger.register-fail(ng-if="err", ng-cloak)
                    button.close(data-dismiss='alert', type='button') &times;
                    p.
                        {{err._code}}: {{err._msg}}
                .alert.alert-dismissable.alert-success(ng-if="success", ng-cloak)
                    button.close(data-dismiss='alert', type='button') &times;
                    p.
                        {{success._msg}}
                .alert.alert-dismissable.alert-info(ng-if="pending", ng-cloak)
                    button.close(data-dismiss='alert', type='button') &times;
                    p.
                        {{pending._msg}}
            .col-lg-12
                // /.panel-heading
                .panel-body
                    .dataTable_wrapper
                        table#dataTables-example.table.table-hover
                            thead
                                tr
                                    th NAME
                                    th TITLE
                                    th EMAIL
                                    th PHONE NUMBER
                            tbody
                                tr.odd.gradeX(ng-repeat="e in employees")
                                    td(style='min-width:6em;max-width:10em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{e._name._first}} {{e._name._last}}
                                    td(style='min-width:5em;max-width:5em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{e._title}}
                                    td(style='min-width:10em;max-width:10em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{e._email}}
                                    td(style='min-width:10em;max-width:10em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{e._phone._number}}
                                    td(style='min-width:5em;max-width:5em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')

                                        button.btn.btn-danger.btn-sm(type='button', title="Delete", ng-click="delete(e)")
                                            i.glyphicon.glyphicon-trash
                                        button.btn.btn-info.btn-sm(type='button', title='Edit', ng-click="update(e)")
                                            i.glyphicon.glyphicon-pencil