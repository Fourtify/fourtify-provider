.modal-header
    button.close(type="button", ng-click='cancel()')
        span(aria-hidden="true") &#215;
    h4.modal-title Update Appointment
.modal-body
    form
        .container-fluid
            .row
                .panel-body
                    .row
                        .col-xs-12.form-group
                            label.main(for="visitorSearch") Visitor
                            input.form-control(id="visitorSearch", type="text", ng-model='visitor',
                                placeholder='{{visitor.display}}',
                                uib-typeahead='v as v.display for v in searchVisitor($viewValue)')
                        .col-xs-12.form-group
                            label.main(for="start") Start
                            input.form-control(id="start", type="text", placeholder="2016-03-15T09:12:00.000Z", ng-model="start")
                        .col-xs-12.form-group
                            label.main(for="end") End
                            input.form-control(id="end", type="text", placeholder="2016-03-15T10:12:00.000Z", ng-model="end")
                        .col-xs-12.form-group
                            label.main(for="reason") Reason
                            input.form-control(id="reason", type="text", placeholder="Reason", ng-model="reason")
                        .col-xs-12.form-group
                            label.main(for="status") Status
                            select.form-control(id="status", ng-model="status", ng-options="s.name for s in statusOpt track by s.value")
                .col-xs-12
                    .alert.alert-dismissable.alert-danger.register-fail(ng-if="err", ng-cloak)
                        button.close(data-dismiss='alert', type='button') &times;
                        p.
                            {{err._code}}: {{err._msg}}
                    .alert.alert-dismissable.alert-success(ng-if="success", ng-cloak)
                        button.close(data-dismiss='alert', type='button') &times;
                        p.
                            {{success._msg}}
                    .alert.alert-dismissable.alert-info(ng-if="pending", ng-cloak)
                        button.close(data-dismiss='alert', type='button') &times;
                        p.
                            {{pending._msg}}
.modal-footer
    button.btn.btn-default(type="button", ng-click='cancel()') Close
    button.btn.btn-blue(type="button", ng-click='update()') Update