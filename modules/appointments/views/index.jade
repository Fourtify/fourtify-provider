                        button.btn.btn-primary(type='submit', ng-click="submitCreate()") Submit
        .row
            .col-lg-12
                // /.panel-heading
                .panel-body
                    .dataTable_wrapper
                        table#dataTables-example.table.table-hover
                            thead
                                tr
                                    th VISITOR
                                    th START
                                    th END
                                    th REASON
                                    th ACTION
                            tbody
                                tr.odd.gradeX(ng-repeat="a in appointments")
                                    td(style='min-width:6em;max-width:10em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{a.visitor}}
                                        input.form-control.edit-input(name='name', type='text', data-ng-show='editMode', data-ng-model='a.visitor')
                                    td(style='min-width:10em;max-width:10em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{a.start}}
                                        input.form-control.edit-input(name='name', type='text', data-ng-show='editMode', data-ng-model='a.start')
                                    td(style='min-width:10em;max-width:10em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{a.end}}
                                        input.form-control.edit-input(name='name', type='text', data-ng-show='editMode', data-ng-model='a.end')
                                    td(style='min-width:5em;max-width:5em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')
                                            span {{a.reason}}
                                        input.form-control.edit-input(name='name', type='text', data-ng-show='editMode', data-ng-model='a.reason')
                                    td(style='min-width:5em;max-width:5em; vertical-align:middle;')
                                        .center(data-ng-hide='editMode')

                                        button.btn.btn-danger.btn-sm(type='button', ng-click='cancelAppointment(a); ', data-toggle='tooltip', data-placement='top', title='Remove Appointment')
                                            i.glyphicon.glyphicon-trash
                                        button.btn.btn-warning.btn-sm(type='button', data-ng-hide='editMode', data-ng-click='editMode=true;', data-toggle='tooltip', data-placement='top', title='Edit Appointment')
                                            i.glyphicon.glyphicon-pencil
                                        button.btn.btn-success.btn-sm(type='button', data-ng-show='editMode', data-ng-click='editMode=false; editRowCollection(a);', data-toggle='tooltip', data-placement='top', title='Save Changes')
                                            i.glyphicon.glyphicon-ok

