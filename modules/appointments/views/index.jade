                .modal-content
                    .modal-header
                        button.close(type='button', data-dismiss='modal') Ã—
                        h4.modal-title CREATE A NEW APPOINTMENT
                    .modal-body

                        h4 VISITOR
                        input.inputBox.newApptInput(type='text', ng-model="visitor")
                        h4 REASON
                        input.inputBox.newApptInput(type='text', ng-model="reason")
                        h4 DATE/TIME



                        .row2
                            .row
                                .col-sm-6
                                    input#datetimepicker4.inputBox.newApptInput(type='text', ng-model="datepickerdata")

