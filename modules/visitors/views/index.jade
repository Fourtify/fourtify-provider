  #page-wrapper
                .container-fluid
                    .row
                        .col-lg-12
                            h1.page-header VISITORS QUEUE
                        button#newAppt.btn.btn-info(type='button', data-toggle='modal', data-target='#myModal') CREATE A NEW APPOINTMENT
                        // Modal
                        #myModal.modal.fade(role='dialog')
                            .modal-dialog(ng-class="{'modal-sm': size == 'sm', 'modal-lg': size == 'lg'}")
                                // Modal content
                                .modal-content
                                    .modal-header
                                        button.close(type='button', data-dismiss='modal') Ã—
                                        h4.modal-title CREATE A NEW APPOINTMENT
                                    .modal-body
                                        h4 FULL NAME
                                        input.inputBox.newApptInput(type='text')
                                        h4 HOST
                                        input.inputBox.newApptInput(type='text')
                                        h4 REASON FOR VISIT
                                        input.inputBox.newApptInput(type='text')
                                        h4 DATE
                                        input.inputBox.newApptInput(type='text')
                                        .container
                                        h4 TIME
                                        input.inputBox.newApptInput(type='text')
                                    .modal-footer
                                        button.btn.btn-default(type='button', data-dismiss='modal') Cancel
                                        button.btn.btn-primary(type='submit', data-ng-disabled='modalForm.$invalid', disables='disabled') Submit
