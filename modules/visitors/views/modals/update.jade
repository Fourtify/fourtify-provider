.modal-header
    button.close(type="button", ng-click='cancel()')
        span(aria-hidden="true") &#215;
    h4.modal-title Update Visitor
.modal-body
    form
        .container-fluid
            .row
                .panel-body
                    .row
                        .col-xs-12.form-group
                            label.main(for="fname") First Name
                            input.form-control(id="fname", type="text", placeholder="First Name", ng-model="fname")
                        .col-xs-12.form-group
                            label.main(for="lname") Last Name
                            input.form-control(id="lname", type="text", placeholder="Last Name", ng-model="lname")
                        .col-xs-12.form-group
                            label.main(for="email") Email
                            input.form-control(id="email", type="text", placeholder="E mail", ng-model="email")
                        .col-xs-12.form-group
                            label.main(for="phone") Phone
                            input.form-control(id="phone", type="text", placeholder="Phone", ng-model="phone")
                        .col-xs-12.form-group
                            label.main(for="status") Status
                            select.form-control(id="status", ng-model="status", ng-options="s.name for s in statusOpt track by s.value")
                .col-xs-12
                    .alert.alert-dismissable.alert-danger.register-fail(ng-if="err", ng-cloak)
                        button.close(data-dismiss='alert', type='button') &times;
                        p.
                            {{err._code}}: {{err._msg}}
                    .alert.alert-dismissable.alert-success(ng-if="success", ng-cloak)
                        button.close(data-dismiss='alert', type='button') &times;
                        p.
                            {{success._msg}}
                    .alert.alert-dismissable.alert-info(ng-if="pending", ng-cloak)
                        button.close(data-dismiss='alert', type='button') &times;
                        p.
                            {{pending._msg}}
.modal-footer
    button.btn.btn-default(type="button", ng-click='cancel()') Close
    button.btn.btn-blue(type="button", ng-click='update()') Update